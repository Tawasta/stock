<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form.source.document.link</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <strong style="width: 50%;" class="oe_left">
                    Source document link
                </strong>
                <t t-if="source_document_link_sale_order">
                    <field name="source_document_link_sale_order"></field>
                </t>
                <t t-if="source_document_link_purchase_order">
                    <field name="source_document_link_purchase_order"></field>
                </t>
                <t t-if="source_document_link_stock_picking">
                    <field name="source_document_link_stock_picking"></field>
                </t>
            </field>
        </field>
    </record>

</odoo>

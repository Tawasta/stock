<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_form_inherit" model="ir.ui.view">
        <field name="name">stock.pack.operation.running.number.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_line_ids_without_package']/tree/field[@name='product_id']"
                  position="before">
                <!-- Don't show the number until the form gets saved and the 0s get
                replaced with proper computed values -->
                <field name="running_number"
                       string="#"
                       attrs="{ 'invisible': [('running_number','=', 0)] }"/>
            </xpath>
        </field>
    </record>
</odoo>

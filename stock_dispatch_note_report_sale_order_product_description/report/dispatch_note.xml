<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template id="report_dispatch_note" inherit_id="stock_dispatch_note_report.report_dispatch_note">
        <xpath expr="//span[@t-field='move.product_id.sudo().description_pickingout']" position="replace">
            <span t-field="move.product_id.sudo().description_sale"/>
        </xpath>
        <xpath expr="//span[@t-field='move.product_id.sudo().description_pickingin']" position="replace">
            <span t-field="move.product_id.sudo().description_sale"/>
        </xpath>
    </template>
</odoo>

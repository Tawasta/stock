<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="sale_order_deliver_from_sale_form" model="ir.ui.view">
			<field name="name">sale.order.deliver.from.sale.form</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">

				<field name="state" position="before">
					<button name="deliver" string="Confirm &amp; deliver all" type="object" attrs="{ 'invisible': [('state', 'in', ['sale','done', 'cancel'])] }"/>
				</field>

			</field>
		</record>
	</data>
</openerp>

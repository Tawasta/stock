<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="stock_picking_view_kanban" model="ir.ui.view">
        <field name="name">stock.picking.view.kanban.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.stock_picking_kanban"/>
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="min_date"/>
            </field>
            <xpath expr="//t[contains(@t-esc,'record.date.value')]" position="replace">
                <span><strong>Date:</strong> <t t-esc="record.date.value and record.date.value.split(' ')[0] or False"/></span><br/>
                <span><strong>Sched.:</strong> <t t-esc="record.min_date.value and record.min_date.value.split(' ')[0] or False"/></span>
            </xpath>
        </field>
    </record>
</odoo>
